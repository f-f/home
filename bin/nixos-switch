#!/usr/bin/env bash

set -euo pipefail

case "$(uname -s)" in
  Darwin)
    cd ~/nixos-config;
    nix build .\#darwinConfigurations.`hostname`.system
    ./result/sw/bin/darwin-rebuild switch --flake .
  ;;

  Linux)
    sudo nixos-rebuild switch -I nixos-config=/home/fabrizio/nixos-config/configuration.nix
    ;;

  *)
    echo 'Other OS?'
  ;;
esac
